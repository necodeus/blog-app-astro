---
const classes = [
    'asideContainer',
    Astro.props.extraClasses,
];
---

<aside class={classes.filter(Boolean).join(' ')}>
    <slot />
</aside>

<style>
.asideContainer {
    right: 0;
    position: var(--desktop-aside-position);
    width: var(--desktop-aside-width);
    height: var(--desktop-aside-height);
    overflow-y: auto;
    overflow-x: hidden;
}
</style>
