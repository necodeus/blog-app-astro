---
const items = Astro.props.items;
---

<ul class="contentNav">
    { items?.map((item: any, i: number) => (
        <li>
            <a href={`#${item.id}`}>{ item.title }</a>
        </li>
    )) }
</ul>

<style>
.contentNav {
    color: gray;
    padding: 20px 30px;
    font-size: 18px;
    line-height: 35px;
    border-bottom: 1px solid #e5e5e5;
}

.contentNav li:not(:last-child) {
    margin-bottom: 10px;
}

.contentNav li {
    list-style: none;
    counter-increment: item;
    position: relative;
}

.contentNav li > *::before {
    content: counter(item) '. ';
}

.contentNav li > * {
    display: block;
}
</style>
